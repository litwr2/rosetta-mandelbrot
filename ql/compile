vasmm68k_mot -m68000 -Fbin -L mandel-ql.lst mandel-ql.asm -o mandel-ql.bin || exit
gawk '/@timer@/{getline;print "s/@tioff@/"strtonum("0x"substr($1,5,8))"/"}' mandel-ql.lst >z.sed
sed -f z.sed mandel-ql.cbas >boot
sed -f z.sed mandel-ql2.cbas >mandel
gcc bin2basic.c -o bin2basic
dd if=mandel-ql.bin of=mandel-ql.bin1 bs=1 count=$(ls -l mandel-ql.bin | awk '{print $5-14}')
bin2basic <mandel-ql.bin1 >>boot
rm bin2basic z.sed mandel-ql.bin1
